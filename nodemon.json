{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules", "dist"],
  "verbose": true,
  "execMap": {
    "ts": "ts-node --require tsconfig-paths/register"
  },
  "runOnChangeOnly": false,
  "watch": ["src/**/*.ts"],
  "ext": "ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "./tsconfig.json"
  }
}
